<!-- Main table -->
<section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <!-- <h3 class="card-title mt-2"><b>service</b></h3> -->
              <div style="text-align: right;">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#input-modal">
                  Add
                </button>
              </div>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                  <% for(let i = 0; i < service.length; i++){ %>
                    <tr>
                      <td><%= i + 1 %></td>
                      <td><%= service[i].name %></td>
                      <td><%= service[i].desc %></td>
                      <td><%= Intl.NumberFormat('en-US',{
                        style: 'currency',
                        currency: 'IDR',
                        }).format(service[i].price) %>
                      </td>
                      <td><%= service[i].status %></td>
                      <td class="text-center">
                        <form action="/service/<%= service[i]._id %>?_method=DELETE" method="POST">
                          <a href="javascript:void()" type="button" 
                          class="btn btn-primary btn-sm btn-edit-modal" 
                          style="margin-right: 6px;" 
                          data-id="<%= service[i]._id %>"
                          data-name="<%= service[i].name %>"
                          data-desc="<%= service[i].desc %>"
                          data-price="<%= service[i].price %>"
                          data-status="<%= service[i].status %>"
                          >
                            Edit
                          </a>
                          <button type="submit" class="btn btn-danger btn-sm">
                            Delete
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% } %>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.table -->
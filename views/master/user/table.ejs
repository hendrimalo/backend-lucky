<!-- Main table -->
<section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <table id="example1" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>No</th>
                  <th>Username</th>
                  <th>Phone Number</th>
                  <th>Email</th>
                  <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                  <% for(let i = 0; i < user.length; i++){ %>
                    <tr>
                      <td><%= i + 1 %></td>
                      <td><%= user[i].username %></td>
                      <td><%= user[i].phoneNumber %></td>
                      <td><%= user[i].email %></td>
                      <td class="text-center">
                        <form action="/user/<%= user[i]._id %>?_method=DELETE" method="POST">
                          <a href="javascript:void()" type="button" 
                          class="btn btn-info btn-sm btn-detail-modal" 
                          data-id="<%= user[i]._id %>"
                          >
                            Detail
                          </a>
                        </form>
                      </td>
                    </tr>
                  <% } %>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->

        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.table -->